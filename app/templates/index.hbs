{{page-title "Homepage"}}

<div class="row align-items-center mb-4">
    <div class="col-6">
        <div class="d-flex align-items-center gap-3">
            <h1 class="display-6 mb-0">Lists of Teams</h1>
            <LinkTo @route="add-team" class="btn btn-primary btn-lg align-self-center h-auto">
                <i class="fas fa-plus-circle me-2"></i> Add Team
            </LinkTo>
        </div>
    </div>
</div>

<div class="row">
    {{#each @model as |team|}}
        <div class="col-md-4">
            <TeamWidget 
                @title={{team.name}} 
                @description={{team.description}} 
                @team={{team}}
                @onDelete={{this.deleteTeam}}
            />
        </div>
    {{/each}}
</div>
