<form {{on "submit" this.submitForm}} class="p-4 rounded shadow-sm bg-white">
    <div class="mb-3">
        <label for="member-name" class="form-label">Member Name</label>
        <Input
            @type="text"
            @value={{this.name}}
            class="form-control input-field"
            id="member-name"
            placeholder="Enter member name"
            {{on "input" this.updateName}}
        />
    </div>
    <div class="mb-3">
        <label for="member-role" class="form-label">Member Role</label>
        <Input
            @type="text"
            @value={{this.role}}
            class="form-control input-field"
            id="member-role"
            placeholder="Enter member role"
            {{on "input" this.updateRole}}
        />
    </div>
    <div class="d-flex gap-3 justify-content-between">
        <button type="button" class="btn btn-secondary w-50" onclick="window.history.back();">Cancel</button>
        <button type="submit" class="btn btn-primary w-50">Submit</button>
    </div>
</form>

