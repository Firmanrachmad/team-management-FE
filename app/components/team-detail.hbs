<div class="card p-3 text-center w-100" style="max-width: 270px; min-height: 300px;">
    <div class="card-body d-flex flex-column">
        <div class="col-auto mb-4">
            <!-- Random Icon -->
            <i class="{{concat 'fas fa-lg ' this.randomIcon}}"></i>
        </div>
        <h5 class="fw-bold">{{@name}}</h5>
        <p class="text-muted flex-grow-1">
            {{@description}}
        </p>

        
        <!-- Edit/Delete with icons -->
        <div class="d-flex justify-content-center gap-2 mt-auto">
            <LinkTo @route="edit-team" @model={{@team.id}} class="btn btn-sm btn-warning"
            {{on "click" this.stopPropagation}}>
                <i class="fas fa-edit me-2"></i> Edit
            </LinkTo>
            <button class="btn btn-sm btn-danger" type="button" {{on "click" this.stopPropagation}}
            {{on "click" this.deleteTeam}}>
                <i class="fas fa-trash-alt me-2"></i> Delete
            </button>
        </div>
    </div>
</div>

