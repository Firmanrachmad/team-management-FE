{{!-- app/components/team-detail.hbs --}}
{{!-- 
  Team Detail Template
  Displays detailed information about a team, including its name, description, and actions (edit and delete).
  Includes a random icon.
--}}

<div class="card p-3 text-center w-100" style="max-width: 270px; min-height: 300px;">
    <div class="card-body d-flex flex-column">
        {{!-- Random Icon --}}
        <div class="col-auto mb-4">
            <i class="{{concat 'fas fa-lg ' this.randomIcon}}"></i>
        </div>

        {{!-- Team Name --}}
        <h5 class="fw-bold">{{@name}}</h5>

        {{!-- Team Description --}}
        <p class="text-muted flex-grow-1">
            {{@description}}
        </p>

        {{!-- Edit and Delete Buttons --}}
        <div class="d-flex justify-content-center gap-2 mt-auto">
            {{!-- Edit Button --}}
            <LinkTo 
                @route="edit-team" 
                @model={{@team.id}} 
                class="btn btn-sm btn-warning"
                {{on "click" this.stopPropagation}}>
                <i class="fas fa-edit me-2"></i> Edit
            </LinkTo>

            {{!-- Delete Button --}}
            <button 
                class="btn btn-sm btn-danger" 
                type="button" 
                {{on "click" this.stopPropagation}}
                {{on "click" this.deleteTeam}}>
                <i class="fas fa-trash-alt me-2"></i> Delete
            </button>
        </div>
    </div>
</div>